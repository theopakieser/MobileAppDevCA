<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.BookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:title="@string/app_name"
            android:titleTextColor="@android:color/white" />

        <!-- Title -->
        <EditText
            android:id="@+id/bookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/hint_bookTitle"
            android:inputType="textCapWords" />

        <!-- Author -->
        <EditText
            android:id="@+id/bookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/hint_bookAuthor"
            android:inputType="textCapWords" />

        <!-- Notes -->
        <EditText
            android:id="@+id/bookNotes"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            android:hint="@string/hint_bookNotes"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <!-- Rating Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_rating"
            android:textSize="16sp" />

        <!-- Rating Bar -->
        <RatingBar
            android:id="@+id/bookRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginBottom="16dp" />

        <!-- Book Cover -->
        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_book_placeholder"
            tools:ignore="ContentDescription" />

        <!-- Choose Image -->
        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/button_choose_image"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white" />

        <!-- Add / Save -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/button_add"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
